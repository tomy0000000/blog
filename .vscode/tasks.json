{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "‚úçüèª General post",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        "posts/${input:Title}/index.${input:Language}.md",
        "--kind",
        "${input:Category}",
        "&&",
        "code",
        "content/posts/${input:Title}/index.${input:Language}.md"
      ],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "‚úçüèª Monthly dump post (last month)",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        {
          "value": "posts/$(date -v-1m +%Y)-$(LANG=EN date -v-1m +%B | tr '[:upper:]' '[:lower:]')-dump/index.zh-tw.md",
          "quoting": "weak"
        },
        "--kind",
        "monthly-dump",
        "&&",
        "code",
        {
          "value": "content/posts/$(date -v-1m +%Y)-$(LANG=EN date -v-1m +%B | tr '[:upper:]' '[:lower:]')-dump/index.zh-tw.md",
          "quoting": "weak"
        }
      ],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "‚úçüèª Monthly dump post (this month)",
      "type": "shell",
      "command": "hugo",
      "args": [
        "new",
        {
          "value": "posts/$(date +%Y)-$(LANG=EN date +%B | tr '[:upper:]' '[:lower:]')-dump/index.zh-tw.md",
          "quoting": "weak"
        },
        "--kind",
        "monthly-dump",
        "&&",
        "code",
        {
          "value": "content/posts/$(date +%Y)-$(LANG=EN date +%B | tr '[:upper:]' '[:lower:]')-dump/index.zh-tw.md",
          "quoting": "weak"
        }
      ],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "üìÖ Update post date",
      "type": "shell",
      "command": "sed",
      "args": [
        "-i",
        {
          "value": "/date:.*/c\\date: $(gdate +%Y-%m-%dT%H:%M:%S%:z)",
          "quoting": "weak"
        },
        "${file}"
      ],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": [],
      "osx": {
        "command": "gsed"
      }
    },
    {
      "label": "üñº Optimize images",
      "type": "shell",
      "command": "scripts/optimize_image.sh",
      "args": ["${fileDirname}"],
      "presentation": {
        "reveal": "silent",
        "focus": false
      },
      "problemMatcher": []
    },
    {
      "label": "‚öôÔ∏è Update ignore list",
      "type": "process",
      "command": "scripts/generate_vscode_ignore.py",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "Title",
      "type": "promptString",
      "description": "Title of the post"
    },
    {
      "id": "Language",
      "type": "pickString",
      "description": "Language of the post",
      "options": ["en", "zh-tw"],
      "default": "zh-tw"
    },
    {
      "id": "Category",
      "type": "pickString",
      "description": "Category of the post",
      "options": ["life", "tech", "dev"],
      "default": "life"
    }
  ]
}
